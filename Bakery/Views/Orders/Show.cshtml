@{
  Layout = "_Layout";
}

<h1>Bakery Order Details: </h1>

<h2>Description: @Model["order"].Description</h2>
<h3>Loaves wanted: @Model["order"].BreadCount</h3>
<h3>Pastries wanted: @Model["order"].PastryCount</h3>
<h3>Make for: @Model["order"].Date</h3>
<h3>Price: $@Model["order"].Price</h3>


<h3>Vendor: @Model["vendor"].Name</h3>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/vendors'>View all vendors</a>